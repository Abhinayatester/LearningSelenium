<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="RegressionSuite">
	
	<listeners> 
		<listener class-name="com.Amazon.generic.listenerutility.Listener"></listener>
	</listeners>
  <test thread-count="5" name="ChromeTest">
	  <parameter name="browser" value="chrome"></parameter>
    <classes>
      
      <class name="com.Amazon.kidsproducttest.kidsproduct1Test"/>
      <class name="com.Amazon.kidsproducttest.kidsproduct2Test"/>
      <class name="com.Amazon.kidsproducttest.kidsproduct3Test"/>  
      <class name="com.Amazon.kidsproducttest.kidsproduct4Test"/>
      <class name="com.Amazon.kidsproducttest.kidsproduct5Test"/>
      <class name="com.Amazon.kidsproducttest.kidsproduct6Test"/>
      <class name="com.Amazon.kidsproducttest.kidsproduct7Test"/>
      <class name="com.Amazon.kidsproducttest.kidsproduct8Test"/>
      <class name="com.Amazon.kidsproducttest.kidsproduct9Test"/>
      <class name="com.Amazon.kidsproducttest.kidsproduct10Test"/>
      
      <class name="com.Amazon.producttest.commonproduct"/>
     
    </classes>
  </test> <!-- Test -->
  
 
  <test thread-count="5" name="FirefoxTest">
	  <parameter name="browser" value="firefox"></parameter>
	  <classes>
		 <class name="com.Amazon.electronicsproducttest.ElectronicProductTest"/> 
	  </classes>
  </test>
  
   <test thread-count="5" name="EdgeTest">
	  <parameter name="browser" value="edge"></parameter>
	  <classes>
		 <class name="com.Amazon.mensproducttest.MensproductTest"/> 
	  </classes>
	  
  </test>
  
  
  
</suite> <!-- RegressionSuite -->
